#!/bin/sh
xrandr --output eDP-1-1 --set "PRIME Synchronization" 0
sleep 2
xrandr --output DP-0.1 --mode 1920x1080 --pos 0x672 --rotate normal --output DP-0.2 --primary --mode 2560x1440 --pos 3840x312 --rotate normal --output DP-0.3 --off --output DP-0 --off --output DP-1 --off --output HDMI-0 --off --output eDP-1-1 --mode 1920x1080 --pos 1920x672 --rotate normal
nvidia-settings --assign "CurrentMetaMode=DP-0.1: nvidia-auto-select +0+360 {ForceCompositionPipeline=On, ForceFullCompositionPipeline=On}, DP-0.2: nvidia-auto-select +3840+0 {ForceCompositionPipeline=On, ForceFullCompositionPipeline=On}"

# restart stuff
sleep 2
killall conky
bash ~/.dotfiles/xinit/util/restore-desktop
xmonad --restart
qtile-cmd -o cmd -f restart
bash ~/.conky/conky-startup.sh
xrandr --output eDP-1-1 --set "PRIME Synchronization" 1

# set metamodes
